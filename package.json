{
  "name": "pytest-runner",
  "displayName": "pytest-runner",
  "description": "在VSCode里通过按钮运行和调试pytest测试",
  "version": "1.0.8",
  "publisher": "花小田",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onCommand:pytest-runner.runTest",
    "onCommand:pytest-runner.debugTest"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      
    ],
    "configuration": {
      "type": "object",
      "title": "Pytest Runner Settings",
      "properties": {
          "pytestRunner.alluredir": {
              "type": "string",
              "default": "report_v3",
              "description": "Set the Allure report directory"
          },
          "pytestRunner.args": {
              "type": "string",
              "default": "-v",
              "description": "Pytest 运行参数，例如 `-v`，`--setup-show`，`-k 'test_name'`"
          }
      }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
